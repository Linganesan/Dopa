        <activity
            android:name=".Arena.Mgym"
            android:label="@string/title_activity_mgym" >
        </activity>
        <activity
            android:name=".Arena.Score"
            android:label="@string/title_activity_score" >
        </activity>
        <activity
            android:name=".Arena.Recall"
            android:label="@string/title_activity_recall" >
