<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relative"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:text="MindPalace"
        android:id="@+id/btnmind"
        android:layout_weight="0.27"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arena"
        android:id="@+id/btnarena"
        android:textStyle="bold"
        android:layout_weight="0.37"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnmind"
        android:layout_alignStart="@+id/btnmind" />

    <Button
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:text="Library"
        android:id="@+id/lib"
        android:textStyle="bold"
        android:layout_weight="0.16"
        android:layout_below="@+id/btnarena"
        android:layout_alignLeft="@+id/btnarena"
        android:layout_alignStart="@+id/btnarena"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:text="Analytics"
        android:id="@+id/button"
        android:layout_below="@+id/lib"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_alignLeft="@+id/lib"
        android:layout_alignStart="@+id/lib" />

</RelativeLayout>
