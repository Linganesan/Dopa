<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.linganesan.dopa.games"
    android:background="@drawable/bg">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card game"
        android:id="@+id/cardgame"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memorize Game"
        android:id="@+id/memorizegame"
        android:layout_below="@+id/cardgame"
        android:layout_alignLeft="@+id/cardgame"
        android:layout_alignStart="@+id/cardgame"
        android:layout_marginTop="53dp"
        android:layout_alignRight="@+id/cardgame"
        android:layout_alignEnd="@+id/cardgame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game 3"
        android:id="@+id/button6"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/memorizegame"
        android:layout_alignLeft="@+id/memorizegame"
        android:layout_alignStart="@+id/memorizegame"
        android:layout_alignRight="@+id/memorizegame"
        android:layout_alignEnd="@+id/memorizegame" />
</RelativeLayout>
